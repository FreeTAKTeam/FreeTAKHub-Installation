[Unit]
Description={{ description }}
{% if after %}
After={{ after }}
{% endif %}

[Service]
Type=simple
Restart=always
RestartSec=1
StandardOutput=append:/var/log/{{ fts_service_name }}/{{ fts_service_name }}-stdout.log
StandardError=append:/var/log/{{ fts_service_name }}/{{ fts_service_name }}-stderr.log
ExecStart={{ python3 }} {{ exec_start }}
{% if exec_reload %}
ExecReload={{ exec_reload }}
{% endif %}
{% if pid_file %}
PIDFile={{ pid_file }}
{% endif %}
{% if envvar %}
Environment={{ envvar }}
{% endif %}
{% if user %}
User={{ user }}
{% endif %}
{% if group %}
Group={{ group }}
{% endif %}

[Install]
{% if wanted_by %}
WantedBy={{ wanted_by }}
{% endif %}
