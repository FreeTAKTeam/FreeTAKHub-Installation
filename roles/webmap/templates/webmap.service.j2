[Unit]
Description=webmap service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=root
Group=root
StandardOutput=append:/var/log/{{ webmap_service_name }}/{{ webmap_service_name }}-stdout.log
StandardError=append:/var/log/{{ webmap_service_name }}/{{ webmap_service_name }}-stderr.log
ExecStart={{ webmap_executable_location }} {{ webmap_config_location }}

[Install]
WantedBy=multi-user.target
